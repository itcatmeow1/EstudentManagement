<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>MY APP</title>
  <script>
    function validateform()
{
	var student_id= document.update.subject_id.value;
	var f_name= document.update.subject_name.value;
	var l_name= document.update.subject_desc.value;
	
	if(student_id=null||student_id=="")
	{
		alert("Subject Id can't be blank");
		return false;
	}
	else if(f_name=null||f_name=="")
	{
		alert("Subject Name can't be blank");
		return false;
	}
	else if(l_name=null||l_name=="")
	{
		alert("Subject description can't be blank");
		return false;
	}
}
</script>
</head>
<body>
  <div w3-include-html="header_admin.html"></div>
  <div id='kotak-tengah'></div>
    <form name="update" onsubmit="return validateform()" action="/apply-update_sub-admin" method="POST">
      <div class=mb-3>
        <label for='student_id' class=form-label>Teacher ID</label>
        <input type='text' class=form-control name='subject_id' value='<%=subject.subject_id %>'>
        </div>
        
        <div class=mb-3>
        <label for=f_name class=form-label>Firstname:</label>
        <input type='text' class=form-control name='subject_name' value='<%=subject.subject_name %>'>
        </div>

        <div class=mb-3>
        <label for='l_name' class='form-label'>Lastname:</label>
        <input type='text' class='form-control' name='subject_desc' value='<%= subject.subject_desc %>'>
        </div>
        <button type=submit class='btn btn-primary'>Update</button>
      </form>
     
       </div>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js'></script>
    </body>
    </html>